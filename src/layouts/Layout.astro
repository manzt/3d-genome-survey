---
import "../styles/global.css";

interface Props {
	title: string;
	description: string;
}

let { title, description }: Props = Astro.props;
---

<!doctype html>
<html lang="en" class="system">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/png" href="/icon-256.png" />
		<title>{title}</title>
		<meta
			name="description"
			content={description}
		/>
	</head>
	<body class="h-screen flex flex-col">
		<slot />
	</body>
</html>
